<div class="workWrapper">
	<div class="roundedNav"></div>
	<div class="paperSort"></div>
	<div class="logoDots"></div>

	<div class="checkBoxWrapper">
		<div id="filters">
			<h2><a href="#" data-filter="*">all</a></h2>
			<h2><a href="#" data-filter=".film">Film</a></h2>
			<h2><a href="#" data-filter=".television">Television</a></h2>
			<h2><a href="#" data-filter=".digital">Digital</a></h2>
		</div>
	</div>

	<div class="videoBorder"></div>
	


	<div class="videoCanvas">
		<div id="container" class="isotope">
  			<div class="item film"><%= image_tag "dudes.jpg" %></div>
 			<div class="item film"><%= image_tag "dudes.jpg" %></div>
  			<div class="item film"><%= image_tag "dudes.jpg" %></div>
  			<div class="item television"><%= image_tag "dudes.jpg" %></div>
 			<div class="item television"><%= image_tag "dudes.jpg" %></div>
  			<div class="item digital"><%= image_tag "dudes.jpg" %></div>
  			<div class="item digital"><%= image_tag "dudes.jpg" %></div>
 			<div class="item digital"><%= image_tag "dudes.jpg" %></div>
  			
		</div>
	</div>

	<div class="navTextWrapper">
    	<h2><%= link_to "the work", work_path %></h2>
    	<h2><%= link_to "the team", team_path %></h2>
    	<h2><%= link_to "contact", contact_path %></h2>
    	<h2><%= link_to "client", client_path %></h2>
  	</div>
</div>

<script>

var $container = $('#container');

$('#container').isotope({
  // options
  itemSelector : '.item',
  layoutMode : 'fitRows'
});

$('#filters a').click(function(){
  var selector = $(this).attr('data-filter');
  $container.isotope({ filter: selector });
  return false;
});






</script>